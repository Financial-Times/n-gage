root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[**{.js,.ts,.html,.hbs,.mustache,.xml,.xsl,.scss,.css,.sh,.vcl,.mk,Makefile}]
indent_style = tab

[**{.json,.yml,.yaml}]
indent_size = 2
indent_style = space

[*.md]
trim_trailing_whitespace = false
